{#
  Section with text and image aside

  We have to extact styles in the css for the layout, so the html in
  the content can be naked.

  @param {string}  title
  @param {wysiwyg} text
  @param {string} image     image url
  @param {string} image_first       default set on false
#}

{# Output #}
<section class="c-image-aside container">
  <div class="row flex items-center">
    <div class="col-12 lg:col-5 order-0 {{ params.image_first == true ? 'lg:order-1' : 'lg:order-0'}}">
      {% if params.title %}
      <h2 class="text-3xl lg:text-4xl mb-4 lg:mb-8 leading-tight">{{ params.title }}</h2>
      {% endif %}
      {% if params.text %}
      <div class="mb-4 lg:mb-8">{{ params.text|raw }}</div>
      {% endif %}
      {% if params.cta|length %}
      <a href="{{ params.cta.link }}" class="inline-block button mb-4 lg:mb-8">{{ params.cta.title }}</a>
      {% endif %}
    </div>
     <div class="col-12 lg:col-7 mb-4 lg:mb-8 order-1 {{ params.image_first == true ? 'lg:order-0' : 'lg:order-1'}}">
      {% if params.image %}
        <div class="w-full h-full">
            <img src="{{ params.image }}" loading="lazy" alt="" class="object-cover w-full h-full" >
        </div>
      {% endif %}
    </div>
  </div>
</section>