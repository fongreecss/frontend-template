{#
    Section with video

    @param {string}  id|url       yt video id OR html5 player url
    @param {string}  caption
#}

{# Output #}
<section class="c-video container">
    <div class="row">
        <div class="col-12 lg:offset-2 lg:col-8 xl:offset-3 xl:col-6 mb-4 lg:mb-8">
            {% if params.id %}
            <div class="yt-video-wrapper">
                <div id="video-{{ params.id }}" data-yt-video="{{ params.id }}" class="yt-video max-w-full"></div>
            </div>
            {% elseif params.url %}
            <div>
                <video width="320" height="240" class="w-full h-auto" onmouseover="this.setAttribute('controls', 'controls');" onmouseleave="this.removeAttribute('controls');">
                <source src="{{ params.url }}" type="video/mp4">
            </div>
            {% endif %}
        </div>
    </div>
</section>